            android:layout_height="50dp"
            android:textSize="35dp"
            android:id="@+id/btn_7"/>

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:text="8"
            android:background="@drawable/button2"
