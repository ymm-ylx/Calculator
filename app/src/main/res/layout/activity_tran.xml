    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:text="8-10"
            android:background="@drawable/button3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="35dp"
            android:layout_marginTop="10dp"
            android:id="@+id/bt_8_10"/>
