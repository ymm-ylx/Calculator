<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    android:background="@drawable/bg">

    <TextView
        android:gravity="bottom|right"
        android:textSize="40dp"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/white"
        android:layout_marginTop="10dp"
        android:id="@+id/textView_length"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:text="AC"
            android:textAllCaps="false"
            android:background="@drawable/button3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="35dp"
            android:layout_span="1"
            android:layout_marginTop="10dp"
            android:id="@+id/bu_clean"/>

        <Button
            android:id="@+id/bu_del"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_span="1"
            android:background="@drawable/button3"
            android:text="Del"
            android:textAllCaps="false"
            android:textSize="35dp" />


        <Button
            android:text="计算"
            android:background="@drawable/button1"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="70dp"
            android:layout_span="2"
            android:textSize="35dp"
            android:id="@+id/bu_cul"/>

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:text="7"
            android:background="@drawable/button2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:textSize="35dp"
            android:id="@+id/bu_7"/>

        <Button
            android:text="8"
            android:background="@drawable/button2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:textSize="35dp"
            android:id="@+id/bu_8"/>

        <Button
            android:text="9"
            android:background="@drawable/button2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:textSize="35dp"
            android:id="@+id/bu_9"/>

        <Button
            android:text="毫米"
            android:background="@drawable/button1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:textSize="35dp"
            android:id="@+id/bu_mm"/>

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:text="4"
            android:background="@drawable/button2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:textSize="35dp"
            android:id="@+id/bu_4"/>

        <Button
            android:text="5"
            android:background="@drawable/button2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:textSize="35dp"
            android:id="@+id/bu_5"/>

        <Button
            android:text="6"
            android:background="@drawable/button2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:textSize="35dp"
            android:id="@+id/bu_6"/>

        <Button
            android:text="厘米"
            android:background="@drawable/button1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:textSize="35dp"
            android:id="@+id/bu_cm"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:text="1"
            android:background="@drawable/button2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:textSize="35dp"
            android:id="@+id/bu_1"/>

        <Button
            android:text="2"
            android:background="@drawable/button2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:textSize="35dp"
            android:id="@+id/bu_2"/>

        <Button
            android:text="3"
            android:background="@drawable/button2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:textSize="35dp"
            android:id="@+id/bu_3"/>

        <Button
            android:text="分米"
            android:background="@drawable/button1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:textSize="35dp"
            android:id="@+id/bu_dm"/>

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:text="0"
            android:background="@drawable/button2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:textSize="35dp"
            android:layout_span="2"
            android:id="@+id/bu_0"/>

        <Button
            android:text="."
            android:background="@drawable/button2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_span="1"
            android:textSize="35dp"
            android:id="@+id/bu_point"/>
        <Button
            android:text="米"
            android:background="@drawable/button1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:textSize="35dp"
            android:layout_span="1"
            android:id="@+id/bu_m"/>


    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:background="@drawable/button3"
            android:textSize="50dp"
            android:layout_span="3"
            android:layout_height="match_parent"></Spinner>



        <Button
            android:text="千米"
            android:background="@drawable/button1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_span="1"
            android:textSize="35dp"
            android:id="@+id/bu_km"/>


    </TableRow>


</TableLayout>